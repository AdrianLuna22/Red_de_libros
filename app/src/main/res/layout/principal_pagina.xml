<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EBEE">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="186dp"
        app:srcCompat="@drawable/mi_logo"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:background="@drawable/fondo_redondeado"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="329dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/JavaBook"
            android:layout_width="104dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/java_book" />

        <Button
            android:id="@+id/OfrecerJavaBook"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Ofrecer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:background="@drawable/fondo_redondeado"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="329dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/PooBook"
            android:layout_width="104dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/poo_book" />

        <Button
            android:id="@id/OfrecerPooBook"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Ofrecer" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>